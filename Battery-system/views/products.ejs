          <!-- <p class="card-text"><%=product.description %></p> -->
        </div>
        <div  class="ml-auto mb-1 mr-1">
            <!-- <a href="/exd"> -->
                <span class="badge badge-success">click for more..  <i class="fas fa-arrow-right"></i></i></span> 
