<%-include('header.ejs');%> 
<style>
    .login-container {
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        background-color: #ffffff;
    }
</style>

<body>
<div class="container">
    <div class="login-container">
        <h2 class="text-center mb-4">Login</h2>
        <form action="/login" method="post" class="user">
            <div class="form-group">
                <label for="email">Email address</label>
                <input type="email" class="form-control" name="EmailAddress" id="email" placeholder="Enter email">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="Password" id="password" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-primary btn-block">Login</button>
        </form>
        <div class="text-center mt-4">
            <p>or</p>
            <a href="/register" class="btn btn-outline-secondary btn-block mb-2"><i class="fas fa-user-plus"></i> Register</a>
            <a href="#" class="btn btn-outline-danger btn-block mb-2"><i class="fab fa-google"></i> Continue with Google</a>
            <a href="#" class="btn btn-outline-primary btn-block mb-2"><i class="fab fa-facebook-f"></i> Continue with Facebook</a>
            <a href="#" class="btn btn-outline-dark btn-block"><i class="fab fa-github"></i> Continue with GitHub</a>
        </div>
    </div>
</div>

<%-include('footer.ejs');%>
</body>