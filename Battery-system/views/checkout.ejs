            // Get the elements
            const quantities = document.querySelectorAll('.quantity');
            const prices = document.querySelectorAll('.price');
            const subtotalElement = document.getElementById('subtotals');
            const shippingElement = document.getElementById('ship');
            const totalElement = document.getElementById('totalPrice');
            
            // Parse the shipping cost
            const shippingCost = parseFloat(shippingElement.textContent.replace('₹', ''));
            
            let subtotal = 0;
            
            // Iterate over each product and calculate the subtotal
            quantities.forEach((quantityElement, index) => {
                const quantity = parseInt(quantityElement.textContent);
                const price = parseFloat(prices[index].textContent.replace('₹', ''));
                subtotal += quantity * price;
            });
        
            // Calculate the total
            const total = subtotal + shippingCost;
        
